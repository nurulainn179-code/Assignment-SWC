public class MinHeapRROP {
    private int[] heap;
    private int size;
    private int capacity;

    // Constructor
    public MinHeapRROP(int capacity) {
        this.capacity = capacity;
        heap = new int[capacity + 1]; // index starts from 1
        size = 0;
    }

    // Insert a new distance value
    public void insert(int value) {
        if (size >= capacity) {
            System.out.println("Heap is full!");
            return;
        }
        heap[++size] = value; // place value at next open position
        int current = size;

        // Maintain Min Heap property
        while (current > 1 && heap[current] < heap[current / 2]) {
            int temp = heap[current];
            heap[current] = heap[current / 2];
            heap[current / 2] = temp;
            current = current / 2;
        }
    }

    // Remove and return the smallest element (root)
    public int removeMin() {
        if (size == 0) {
            System.out.println("Heap is empty!");
            return -1;
        }

        int min = heap[1];
        heap[1] = heap[size--];
        heapify(1);
        return min;
    }

    // Restore Min Heap property
    private void heapify(int i) {
        int left = 2 * i;
        int right = 2 * i + 1;
        int smallest = i;

        if (left <= size && heap[left] < heap[smallest])
            smallest = left;
        if (right <= size && heap[right] < heap[smallest])
            smallest = right;

        if (smallest != i) {
            int temp = heap[i];
            heap[i] = heap[smallest];
            heap[smallest] = temp;
            heapify(smallest);
        }
    }

    // Display the heap elements
    public void display() {
        System.out.print("Min Heap: ");
        for (int i = 1; i <= size; i++) {
            System.out.print(heap[i] + " ");
        }
        System.out.println();
    }

    // Main method to test
    public static void main(String[] args) {
        MinHeapRROP heap = new MinHeapRROP(10);

        int[] distances = {15, 25, 20, 30, 28, 35};

        System.out.println("Inserting distances into Min Heap...");
        for (int d : distances) {
            heap.insert(d);
        }

        heap.display();

        System.out.println("\nRemoving shortest distance: " + heap.removeMin());
        heap.display();
    }
}
